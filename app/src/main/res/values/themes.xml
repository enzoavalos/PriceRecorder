<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PriceRecorder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="editTextColor">@color/white</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--Agrega flecha de regreso-->
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>
    
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:layout_height">2dp</item>
    </style>
</resources>